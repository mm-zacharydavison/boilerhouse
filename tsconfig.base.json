{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "lib": ["ESNext"],
    "types": ["bun", "node"],
    "composite": false,
    "incremental": false,
    "baseUrl": ".",
    "paths": {
      "@boilerhouse/core": ["packages/core/src/index.ts"],
      "@boilerhouse/docker": ["packages/docker/src/index.ts"]
    }
  }
}
