{
  "name": "boilerhouse",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "bun run --filter '@boilerhouse/dashboard' dev > /dev/null 2>&1 & cd apps/api && bun --env-file=../../.env run --watch src/index.ts",
    "dev:api": "cd apps/api && bun --env-file=../../.env run --watch src/index.ts",
    "dev:dashboard": "bun run --filter '@boilerhouse/dashboard' dev",
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "cli": "bun run packages/cli/src/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@faker-js/faker": "^10.2.0",
    "@types/bun": "^1.2.1",
    "typescript": "^5.7.3"
  }
}
